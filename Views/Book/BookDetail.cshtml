 @model MvcApplication5.Models.Book
@{
    ViewBag.Title = "BookDetail";

    Layout = "~/Views/Shared/LayoutPage1.cshtml";
}

 <div id="templatemo_content_right">
        	
            <h1> @Model.Name <span>(by @Model.Author)</span></h1>
            <div class="image_panel"><img src="@Model.Images.Substring(1)" alt="CSS Template" width="100" height="150" /></div>
          <h2>@Model.SmallDes</h2>
            <ul>
	            
            	<li>Id @Model.Id</li>
                <li>Price $@Model.Price</li>
                
                    
                
               
            </ul>
            
            <p>@Model.FullDes</p>

			<div class="buy_now_button"><a href="/User/Buy?Id=@Model.Id">Buy Now</a></div>

			<div class="cleaner_with_height">&nbsp;</div>
            
            <a href="#"><img src="~/images/templatemo_ads.jpg" alt="css template ad" /></a>
            
        </div> <!-- end of content right -->
